{
  "name": "kavanet-mongo",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/InvisiBug/Kavanet-Mongo.git",
  "author": "InvisiBug <matthewjkavanagh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec \"ts-node \" ./src/index.ts",
    "build": "tsc && yarn copy:schema",
    "run": "yarn build && node ./dist/index.js",
    "up": "clear && ./bin/start-container.sh",
    "down": "docker compose down",
    "logs": "docker logs kavanest-api -f",
    "copy:schema": "cp -r ./src/schema ./dist/schema",
    "push": "./bin/push.sh",
    "deploy": "yarn push && ./bin/deploy.sh"
  },
  "dependencies": {
    "apollo-log": "^1.1.0",
    "apollo-server": "^3.4.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.6.1",
    "graphql-tools": "^8.2.0",
    "kavanest-store": "https://github.com/InvisiBug/kavanest-store.git",
    "mongodb": "^4.1.3",
    "mongoose": "^6.0.12",
    "mqtt": "^4.2.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.5",
    "nodemon": "^2.0.6",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  }
}
